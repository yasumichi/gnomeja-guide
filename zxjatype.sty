%% REVISE: \xeCJK@i@ii
\def\xeCJK@i@ii#1{
  \xeCJK@punctrule{#1}{l}
  \zxjt@lettodimenx{xeCJK\xeCJK@punctstyle\xeCJK@bboxname @lglue@#1}
