  \@for\zxjt@x:={#2}\do{
    {\lccode`\?="\zxjt@x\relax
      \lowercase{\gdef\zxjt@tmpa{?}}}
    \@namedef{zxjt@gadjusttype@\zxjt@tmpa}{#1}}}

